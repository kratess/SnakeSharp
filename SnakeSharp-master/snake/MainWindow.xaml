<Window x:Class="snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake" Height="339" Width="616" ResizeMode="CanMinimize"
        Icon="snake.ico">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas Name="paintCanvas" Background="White" VerticalAlignment="Stretch">
            <Rectangle Fill="#FF8E8E8F" Height="24" Stroke="Black" Width="610"/>

            <Label Content="Length:" Canvas.Right="366" Height="20" Canvas.Left="2" Width="75" Background="#FFCFC8C8" Canvas.Top="2" Padding="5,0" VerticalContentAlignment="Center"/>
            <Label x:Name="length_label" Content="{Binding snakeLength}" Canvas.Right="366" Canvas.Top="2" Height="20" Canvas.Left="46" Padding="1,0,5,0" VerticalContentAlignment="Center" MinWidth="31" Background="#FFCFC8C8" HorizontalContentAlignment="Center"/>
        </Canvas>
    </Grid>
</Window>
